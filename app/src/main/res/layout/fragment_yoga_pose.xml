<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.yoga.fragments.YogaPoseFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="355dp"
                android:layout_height="255dp"
                android:layout_marginTop="55dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="20dp"
                >
                <ImageView
                    android:id="@+id/url_PNG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />

                <ToggleButton
                    android:id="@+id/toggleButton"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="280dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/baseline_favorite_24"
                    android:checked="false"
                    android:clipToOutline="true"
                    android:fontFamily="serif"
                    android:outlineAmbientShadowColor="#E91E63"
                    android:textColor="#0B83D4" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pose Name: "
                android:layout_marginStart="-150dp"
                android:layout_marginTop="70dp"
                />
            <TextView
                android:id="@+id/pose_EnglishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Pose Name: "

                android:layout_marginStart="-70dp"
                android:layout_marginTop="-19dp"
                android:textSize="14sp"
                android:textColorHighlight="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adapted Name: "
                android:layout_marginStart="-140dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/pose_AdaptedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Adapted Name: "
                android:layout_marginStart="-40dp"
                android:layout_marginTop="-20dp"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translated Name: "
                android:layout_marginStart="-135dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/pose_Translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Translated Name: "
                android:layout_marginStart="-20dp"
                android:layout_marginTop="-19dp"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanskrit Name: "
                android:layout_marginStart="-140dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/pose_SanskritName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sanskrit Name: "
                android:layout_marginStart="-40dp"
                android:layout_marginTop="-19dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pose Benefits: "
                android:layout_marginStart="-142dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/pose_benefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pose Benefits: "
                android:layout_marginStart="-48dp"
                android:layout_marginTop="-19dp"
                android:textSize="14sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:layout_marginStart="-150dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/pose_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Description: "
                android:layout_marginStart="-70dp"
                android:layout_marginTop="-19dp"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/url_ALT"
                android:layout_width="135dp"
                android:layout_height="125dp"
                android:layout_marginStart="-75dp"
                android:layout_marginTop="100dp"

                />
            <ImageView
                android:id="@+id/url_SVG"
                android:layout_width="135dp"
                android:layout_height="125dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="-124dp"

                />

            <ImageButton
                android:id="@+id/add_To_Custom"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_add_circle_24"
                android:layout_marginStart="150dp"
                android:layout_marginTop="70dp"
                />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>