<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/custon_cardView_closed"
        android:layout_width="350dp"
        android:layout_height="130dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >
        <ImageView
            android:id="@+id/open_cardview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/baseline_arrow_drop_down_24"
            android:layout_marginStart="150dp"
            android:layout_marginTop="75dp"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routine: "
            android:layout_marginStart="20dp"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/routine_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routine Name: "
            android:layout_marginStart="87dp"
            android:textSize="14dp"
            android:layout_marginTop="22dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poses Count: "
            android:layout_marginStart="20dp"
            android:textSize="16dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:id="@+id/pose_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     "
            android:layout_marginStart="105dp"
            android:textSize="16dp"
            android:layout_marginTop="50dp"
            />
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/logo"
            android:layout_marginTop="-10dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/custon_cardView_opened"
        android:layout_width="350dp"
        android:layout_height="530dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"

     >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/opened_cardview_RV"
                    android:layout_width="300dp"
                    android:layout_height="360dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="20dp"
                />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Routine: "
            android:textSize="16dp"
           android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/routine_Name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routine Name: "
            android:layout_marginStart="87dp"
            android:textSize="14dp"
            android:layout_marginTop="22dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poses count: "
            android:layout_marginStart="20dp"
            android:textSize="16dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:id="@+id/pose_Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     "
            android:layout_marginStart="105dp"
            android:textSize="16dp"
            android:layout_marginTop="50dp"
            />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/logo"
            android:layout_marginTop="-10dp"/>



        <ImageView
            android:id="@+id/close_cardview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/baseline_arrow_drop_up_24"
            android:layout_marginStart="150dp"
            android:layout_marginTop="485dp"
            />




    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>