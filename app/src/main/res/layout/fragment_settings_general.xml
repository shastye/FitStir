<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.settings.fragments.SettingsGeneralFragment">

    <LinearLayout
        android:id="@+id/user_id_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_button"
        android:clickable="false"
        android:backgroundTint="@color/off_white"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="User ID: "/>

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text=""/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.00"
        android:layout_marginTop="50dp"
        android:paddingTop="30dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
            android:id="@+id/settings_topics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_a80_section_background"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <com.fitstir.fitstirapp.ui.settings.customviews.SettingsTopicView
                android:id="@+id/theme_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                app:title0="Default Theme"
                app:description="Theme"
                app:image="@drawable/ic_check_box_outline_blank_20dp"
                app:reference="themeID" />

            <com.fitstir.fitstirapp.ui.settings.customviews.SettingsTwoOptionItemView
                android:id="@+id/unit_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                app:title1="Units"
                app:image1="@drawable/ic_worldwww_black_200dp"
                app:image2="@drawable/ic_worldwww_black_200dp"
                app:option1="Imperial"
                app:option2="Metric"
                app:reference1="unitID" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>