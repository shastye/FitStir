<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.connect.QuestionFragment">

    <ImageView
        android:layout_width="650dp"
        android:layout_height="823dp"
        android:background="@drawable/backgroundzoomed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <TextView
        android:layout_width="409dp"
        android:layout_height="72dp"
        android:layout_marginTop="128dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Choose a Goal area you would like to start in"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_lose_weight"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:layout_marginTop="438dp"
        android:text="Lose Weight"
        android:background="@drawable/buttonquestion"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button_gain_weight"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:layout_marginTop="212dp"
        android:text="Gain Weight"
        android:background="@drawable/buttonquestion"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button_Maintain_weight"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:layout_marginTop="250dp"
        android:text="Maintain Weight"
        android:background="@drawable/buttonquestion"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button_gain_muscle"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/buttonquestion"
        android:text="Gain Muscle"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button_modify_diet"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:layout_marginTop="326dp"
        android:background="@drawable/buttonquestion"
        android:text="Modify Diet"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button_manage_stress"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:layout_marginTop="363dp"
        android:text="Manage Stress"
        android:background="@drawable/buttonquestion"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_cardio"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:layout_marginTop="400dp"
        android:text="Increase Cardio"
        android:background="@drawable/buttonquestion"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>