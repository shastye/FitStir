<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.yoga.fragments.YogaFragment"
    android:background="@drawable/background2"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/option_tabs"
        android:layout_marginStart="105dp"
        android:layout_marginTop="50dp"
        android:elevation="5dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/option_tabs"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:elevation="5dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/option_tabs"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:elevation="5dp"
        />

    <ImageView
        android:id="@+id/recents_Tab"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-190dp"
        android:background="@drawable/recent"
        android:layout_marginTop="50dp"
        android:elevation="5dp"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/custom_Tab"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/custom"
        android:layout_marginTop="50dp"
        android:elevation="5dp"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/favorite_Tab"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="55.5dp"
        android:background="@drawable/baseline_favorite_border_24"
        android:layout_marginTop="55dp"
        android:elevation="5dp"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recents"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginStart="-190dp"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginStart="38.5dp"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorites"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginStart="39dp"
        android:layout_marginTop="35dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/quickStart"
        android:layout_width="300dp"
        android:layout_height="175dp"
        android:layout_marginStart="-240dp"
        android:layout_marginTop="-165dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="5dp"
        android:clickable="true"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="340dp"
            android:layout_height="175dp"
            android:background="@drawable/quick_start"
            android:layout_marginStart="-20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Quick Start"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:id="@+id/arrow_Quickstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_circle_right_24"
            android:layout_marginStart="248dp"
            android:layout_marginTop="90dp"
            android:clickable="true"
            />
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-350dp"
        android:layout_marginTop="340dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/beginner_Yoga"
                android:layout_width="175dp"
                android:layout_height="145dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="145dp"
                    android:background="@drawable/beginner"
                    android:layout_marginStart="-20dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Beginner's"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/intermediate_Yoga"
                android:layout_width="175dp"
                android:layout_height="145dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="145dp"
                    android:background="@drawable/intermediate"
                    android:layout_marginStart="-20dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Intermediate"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/expert_Yoga"
                android:layout_width="175dp"
                android:layout_height="145dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="165dp"
                    android:background="@drawable/expert"
                    android:layout_marginStart="-60dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Expert"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/search_Yoga"
                android:layout_width="175dp"
                android:layout_height="145dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="155dp"
                    android:layout_height="165dp"
                    android:background="@drawable/explose_search"
                    android:layout_marginStart="8dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Explore"
                    android:textAlignment="center"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="8dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
       android:layout_marginStart="-400dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/learn_Yoga"
                android:layout_width="175dp"
                android:layout_height="145dp"
                android:clickable="true"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="145dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/learning" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="83dp"
                    android:layout_marginTop="5dp"
                    android:text="Learn Poses"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/standing_Yoga"
                android:layout_width="175dp"
                android:layout_height="145dp"
                android:clickable="true"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="145dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/standing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="83dp"
                    android:layout_marginTop="25dp"
                    android:text="Standing"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/balance_Yoga"
                android:layout_width="175dp"
                android:layout_height="145dp"
                android:clickable="true"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="145dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/balance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="75dp"
                    android:text="Balance"
                    android:textAlignment="center"
                    android:textColor="@color/a80_off_white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </HorizontalScrollView>



</LinearLayout>