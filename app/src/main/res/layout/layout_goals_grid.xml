<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_goals_background"
        android:layout_width="390dp"
        android:layout_height="190dp"
        android:outlineProvider="none"
        android:elevation="0dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="40dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:outlineProvider="none"
        android:alpha="0.25"
        android:elevation="0dp"
        app:cardCornerRadius="36dp"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="130dp"
        android:outlineProvider="none"
        android:alpha="0.25"
        android:elevation="1dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.00"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/layout_goal_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Name"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="26sp"
        android:textAlignment="textStart"
        android:elevation="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00"
        app:layout_constraintHorizontal_bias="0.00" />

    <TextView
        android:id="@+id/layout_goal_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Value"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="18sp"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:elevation="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00"
        app:layout_constraintHorizontal_bias="1.00" />


    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:elevation="5dp"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84"
        app:layout_constraintHorizontal_bias="0.4">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/goal_grid_graph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:outlineProvider="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.87"
            app:layout_constraintHorizontal_bias="0.6"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>