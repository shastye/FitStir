<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="195dp"
    android:layout_marginStart="70dp"
    android:layout_marginTop="200dp"
    android:clickable="true"
    app:cardCornerRadius="50dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/custom_empty"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:foregroundGravity="center"
        app:cardBackgroundColor="@color/soft_deep_purple"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/dialog_background"
            android:layout_width="260dp"
            android:layout_height="190dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/dialog_background_square"
            />

        <TextView
            android:id="@+id/dialog_emptyList"
            android:layout_width="252dp"
            android:layout_height="111dp"
            android:text="No custom

        routines saved!"

            android:textAlignment="center"
            android:textColor="@color/soft_deep_purple"
            android:textSize="30dp"
            android:textStyle="italic"
            android:layout_marginTop="45dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>