<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:foregroundGravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="7dp"
    android:paddingVertical="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/workout_backgorund"
        android:layout_width="190dp"
        android:layout_height="210dp"
        android:alpha="0.75"
        android:elevation="0dp"
        android:outlineProvider="none"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/tvDirections"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="157.7dp"
            android:elevation="4dp"
            android:hint="Body Part"
            android:inputType="textMultiLine|textFilter"
            android:paddingHorizontal="5dp"
            android:scrollHorizontally="false"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="11sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:alpha="0.25"
        android:elevation="0dp"
        android:outlineProvider="none"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:cardCornerRadius="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tvImage"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:elevation="2dp"
        android:layout_marginTop="5dp"
        android:src="@color/mid_grey"
        android:scaleType="centerCrop"
        app:shapeAppearance="?attr/shapeAppearanceMediumComponent"
        app:shapeAppearanceOverlay="@style/RoundedTop"
        app:layout_constraintBottom_toBottomOf="@id/workout_backgorund"
        app:layout_constraintEnd_toEndOf="@id/workout_backgorund"
        app:layout_constraintStart_toStartOf="@id/workout_backgorund"
        app:layout_constraintTop_toTopOf="@id/workout_backgorund"
        app:layout_constraintVertical_bias="0.0" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tvGifImage"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:elevation="2dp"
        android:layout_marginTop="5dp"
        android:src="@color/mid_grey"
        android:visibility="invisible"
        android:scaleType="centerCrop"
        app:shapeAppearance="?attr/shapeAppearanceMediumComponent"
        app:shapeAppearanceOverlay="@style/RoundedTop"
        app:layout_constraintBottom_toBottomOf="@id/workout_backgorund"
        app:layout_constraintEnd_toEndOf="@id/workout_backgorund"
        app:layout_constraintStart_toStartOf="@id/workout_backgorund"
        app:layout_constraintTop_toTopOf="@id/workout_backgorund"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:elevation="4dp"
        android:inputType="textMultiLine|textFilter"
        android:paddingHorizontal="5dp"
        android:scrollHorizontally="false"
        android:text="Exercise Name"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="140dp"
        android:elevation="4dp"
        android:inputType="textMultiLine|textFilter"
        android:paddingHorizontal="5dp"
        android:scrollHorizontally="false"
        android:text="Target:"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTarget"
        android:layout_width="120dp"
        android:layout_height="16dp"
        android:elevation="4dp"
        android:hint="Target Area"
        android:inputType="textMultiLine|textFilter"
        android:paddingHorizontal="5dp"
        android:scrollHorizontally="false"
        android:layout_marginTop="126dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="11sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="78dp"
        android:layout_height="16dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="115dp"
        android:elevation="4dp"
        android:inputType="textMultiLine|textFilter"
        android:paddingHorizontal="5dp"
        android:scrollHorizontally="false"
        android:text="Equipment:"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEquipment"
        android:layout_width="120dp"
        android:layout_height="16dp"
        android:elevation="4dp"
        android:hint="Equipment"
        android:inputType="textMultiLine|textFilter"
        android:paddingHorizontal="5dp"
        android:scrollHorizontally="false"
        android:layout_marginTop="141dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="11sp"
        android:layout_marginLeft="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="78dp"
        android:layout_height="16dp"
        android:layout_marginTop="156dp"
        android:layout_marginRight="109dp"
        android:elevation="4dp"
        android:inputType="textMultiLine|textFilter"
        android:paddingHorizontal="5dp"
        android:scrollHorizontally="false"
        android:text="Body Group:"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBodyPart"
        android:layout_width="120dp"
        android:layout_height="16dp"
        android:elevation="4dp"
        android:hint="Body Part"
        android:inputType="textMultiLine|textFilter"
        android:paddingHorizontal="5dp"
        android:scrollHorizontally="false"
        android:layout_marginTop="190.7dp"
        android:visibility="invisible"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="11sp"
        android:layout_marginLeft="69dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>