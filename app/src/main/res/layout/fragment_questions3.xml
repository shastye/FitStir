<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.connect.Questions3Fragment"
    android:background="@drawable/background2">


    <Button
        android:id="@+id/button_non_active"
        android:layout_width="280dp"
        android:layout_height="112dp"
        android:layout_marginTop="228dp"
        android:text="Non-Active -
                                               when you don't move your body for long periods of time. This can include sitting or lying on the sofa watching TV, and sitting at a desk or computer."
        android:textAlignment="textStart"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_light_active"
        android:layout_width="280dp"
        android:layout_height="105dp"
        android:layout_marginTop="356dp"
        android:text="Light-Active -

                                    Light physical demands on a daily basis with exercise routines consistent of 2- 3 times a week"
        android:textAlignment="textStart"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_active"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginTop="480dp"
        android:text="Active -
                                    Alternating moderate to intense workouts 4-5 times per week"
        android:textAlignment="textStart"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_back3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="656dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>