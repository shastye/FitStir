<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="255dp"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="120dp"
    app:cardBackgroundColor="@color/mid_grey"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    >
    <ImageButton
        android:id="@+id/add_To_BTN"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/baseline_add_circle_24"/>

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="65dp"
        app:cardCornerRadius="140dp"
        android:elevation="10dp"
        >

        <ImageView
            android:id="@+id/yoga_Image_Customs"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_Customs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Yoga Name"
        android:textSize="11sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="70dp"/>
    <TextView
        android:id="@+id/cat_Customs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:textSize="11sp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/levels_Customs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Difficulty Level"
        android:textSize="11sp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="47dp"/>



</androidx.cardview.widget.CardView>