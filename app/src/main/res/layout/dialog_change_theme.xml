<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foreground="@android:color/transparent"
    android:orientation="vertical"
    tools:context=".ui.settings.dialogs.ChangeThemeDialog">

    <ImageView
        android:id="@+id/dialog_background"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/dialog_background_square"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are about to change \nthe theme colors to:"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.05" />

    <ImageView
        android:id="@+id/primary_color_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/magenta"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary\nColor:"
        android:textColor="?attr/colorPrimary"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.30" />

    <ImageView
        android:id="@+id/primary_variant_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/magenta"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.55"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary\nColor\nVariant:"
        android:textColor="?attr/colorPrimary"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.55" />

    <ImageView
        android:id="@+id/secondary_color_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/magenta"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary\nColor:"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.30" />

    <ImageView
        android:id="@+id/secondary_variant_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/magenta"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.55"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary\nColor\nVariant:"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you wish to continue?"
        android:textColor="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.70" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_cancel_button"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="?attr/colorSecondaryVariant"
        android:text="CANCEL"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.90" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_accept_button"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="?attr/colorOnPrimary"
        android:text="ACCEPT"
        android:textColor="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="@id/dialog_background"
        app:layout_constraintEnd_toEndOf="@id/dialog_background"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@id/dialog_background"
        app:layout_constraintTop_toTopOf="@id/dialog_background"
        app:layout_constraintVertical_bias="0.90" />

</androidx.constraintlayout.widget.ConstraintLayout>