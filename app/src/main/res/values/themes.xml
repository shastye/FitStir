<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Change Bottom Navigation to match secondary theme colors -->
    <style name="BottomNavigation">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="elevation">@null</item>
        <item name="itemTextAppearanceInactive">@color/bnv_tint</item>
        <item name="itemTextAppearanceActive">@color/bnv_tint</item>
        <item name="itemIconTint">@color/bnv_tint</item>
        <item name="itemTextColor">@color/bnv_tint</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemRippleColor">@color/bnv_ripple</item>
    </style>

    <!-- Spinner Style settings -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>


    <!-- Base application theme. -->
    <style name="Theme1" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_blue</item>
        <item name="colorPrimaryVariant">@color/fuchsia</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/forest</item>
        <item name="colorSecondaryVariant">@color/lime</item>
        <item name="colorOnSecondary">@color/off_white</item>
        <!-- Background image. -->
        <item name="background">@drawable/background2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Custom Bottom Navigation theme. -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Secondary application theme. -->
    <style name="Theme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background image. -->
        <item name="background">@drawable/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Custom Bottom Navigation theme. -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundedTop" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">36dp</item>
        <item name="cornerSizeTopRight">36dp</item>
    </style>

    <style name="RoundedStart" parent="">
        <item name="cornerSizeBottomLeft">36dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="RoundedBottomAndStart" parent="">
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>