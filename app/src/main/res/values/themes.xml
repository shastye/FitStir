<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Change Bottom Navigation to match secondary theme colors -->
    <style name="BottomNavigation">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="elevation">@null</item>
        <item name="itemTextAppearanceInactive">@color/bnv_tint</item>
        <item name="itemTextAppearanceActive">@color/bnv_tint</item>
        <item name="itemIconTint">@color/bnv_tint</item>
        <item name="itemTextColor">@color/bnv_tint</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemRippleColor">@color/bnv_ripple</item>
    </style>



    <!-- Base application theme. -->
    <style name="Theme1" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:name">Default Theme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_blue</item>
        <item name="colorPrimaryVariant">@color/fuchsia</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/soft_blue</item>
        <item name="colorSecondaryVariant">@color/lime</item>
        <item name="colorOnSecondary">@color/cool_green</item>
        <!-- Background image. -->
        <item name="background">@drawable/background2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Custom Bottom Navigation theme. -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/family</item>
    </style>

    <!-- Secondary application theme. -->
    <style name="Theme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:name">Dark Theme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/pumpkin_orange</item>
        <item name="colorOnPrimary">@color/soft_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/off_white</item>
        <item name="colorOnSecondary">@color/safety_orange</item>
        <!-- Background image. -->
        <item name="background">@drawable/background_darkmode</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Custom Bottom Navigation theme. -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/family</item>
    </style>

    <style name="RoundedTop" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">36dp</item>
        <item name="cornerSizeTopRight">36dp</item>
    </style>

    <style name="RoundedBottomLeft" parent="">
        <item name="cornerSizeBottomLeft">36dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="RoundedBottom" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">36dp</item>
        <item name="cornerSizeBottomLeft">36dp</item>
    </style>

</resources>