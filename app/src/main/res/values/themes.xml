<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Change Bottom Navigation to match secondary theme colors -->
    <style name="BottomNavigation">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="elevation">@null</item>
        <item name="itemTextAppearanceInactive">@color/bnv_tint</item>
        <item name="itemTextAppearanceActive">@color/bnv_tint</item>
        <item name="itemIconTint">@color/bnv_tint</item>
        <item name="itemTextColor">@color/bnv_tint</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemRippleColor">@color/bnv_ripple</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryVariant">@color/fuchsia</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/forest</item>
        <item name="colorSecondaryVariant">@color/lime</item>
        <item name="colorOnSecondary">@color/off_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Custom Bottom Navigation theme. -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Secondary application theme. -->
    <style name="Theme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Custom Bottom Navigation theme. -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>